<div class="controls">
    <?php echo $this->paginator; ?>
</div>

<ul class="users pending">
    <?php foreach ($this->users as $user) { ?>
    <li>
        <div class="inline-actions">
            <a href="<?php echo $this->url(array(
                'action' => 'send-confirm-email',
                'user' => $user->getId(),
            )); ?>" class="send-confirm-email"><?php putGS('Send confirm email'); ?></a> |
            <a href="<?php echo $this->url(array(
                'action' => 'delete',
                'user' => $user->getId(),
            )); ?>" class="delete"><?php putGS('Delete'); ?></a>
        </div>
        <a class="edit"><?php echo $user->getFirstName() || $user->getLastName() ? $this->escape(trim($user->getFirstName() . ' ' . $user->getLastName())) : $this->escape('<' . preg_replace('/\@.*$/', '', $user->getEmail()) . '>'); ?></a>
        <span class="agent"><abbr title="<?php echo $user->getAttribute('http_user_agent'); ?>"><?php echo array_pop(explode(' ', $user->getAttribute('http_user_agent'))); ?></abbr></span>
        <a href="mailto:<?php echo $user->getEmail(); ?>" class="mailto"><?php echo $user->getEmail(); ?></a>
        <span class="created"><?php echo $user->getCreated()->format('d.m.Y H:i'); ?></span>
    </li>
    <?php } ?>
</ul>
